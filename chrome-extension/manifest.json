{
  "manifest_version": 3,
  "name": "RecallBin - Save & Recall Anything",
  "version": "1.0.0",
  "description": "Save web content with AI-powered organization and smart reminders",
  "permissions": [
    "activeTab",
    "storage",
    "alarms",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:5001/*",
    "http://localhost:5173/*",
    "https://tech-sprint-code-forge2026.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:5173/*",
        "https://tech-sprint-code-forge2026.vercel.app/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
